<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAssessment" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView" />
    <style name="Button"/>
    <style name="TextView.SansMediumWhite">
        <item name="fontFamily">@font/sans_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.SansMediumDarkHard">
        <item name="fontFamily">@font/sans_medium</item>
        <item name="android:textColor">@color/colorDarkHard</item>
    </style>

    <style name="TextView.LightDarkHard">
        <item name="fontFamily">@font/sans_light</item>
        <item name="android:textColor">@color/colorDarkHard</item>
    </style>

    <style name="TextView.ItalicDarkHard">
        <item name="fontFamily">@font/sans_italic</item>
        <item name="android:textColor">@color/colorDarkHard</item>
    </style>

    <style name="Button.BtnWhiteBorder">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sans_light</item>
        <item name="android:textColor">@color/colorDarkHard</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>